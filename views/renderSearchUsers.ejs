<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>users</title>
    <link rel="stylesheet" type="text/css" href="/css/styles.css" />
  </head>
  <body>
    <h2 class="heading">Users:</h2>

    <table class="table">
      <tr class="table-r">
        <th class="table-h">Id</th>
        <th class="table-h">User name</th>
      </tr>

      <% usernames.map(user => { %>
      <tr class="table-r">
        <td class="table-h"><%= user.id %></td>
        <td class="table-h"><%= user.username %></td>
      </tr>
      <% }) %>
    </table>

    <button onclick="window.location.href='/new'" class="submit-btn">
      Create user
    </button>
    <button class="submit-btn del-btn" onclick="window.location.href='/delete'">
      Delete user
    </button>
    <button class="submit-btn search-btn" onclick="window.location.href='/'">
      home
    </button>
  </body>
</html>
